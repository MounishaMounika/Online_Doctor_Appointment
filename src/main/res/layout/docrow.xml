        android:text="Doctor Name:"
        android:textSize="20sp"
        android:id="@+id/doctv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital Name:"
        android:fontFamily="@font/almendra_bold_italic"
        android:textSize="20sp"
        android:id="@+id/t2"/>
